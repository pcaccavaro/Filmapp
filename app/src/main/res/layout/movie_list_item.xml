<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>

        <import type="android.view.View" />

        <variable
            name="movie"
            type="com.example.filmapp.data.model.Movie" />
    </data>

    <androidx.cardview.widget.CardView
        android:layout_width="@dimen/filmapp_280_dp"
        android:layout_height="@dimen/filmapp_320_dp"
        android:layout_marginTop="@dimen/filmapp_12_dp"
        android:layout_marginEnd="@dimen/filmapp_24_dp"
        android:layout_marginBottom="@dimen/filmapp_12_dp"
        android:elevation="@dimen/filmapp_4_dp"
        app:cardCornerRadius="@dimen/filmapp_10_dp"
        app:cardUseCompatPadding="true">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <ImageView
                android:id="@+id/movie_list_item_poster"
                android:layout_width="@dimen/filmapp_0_dp"
                android:layout_height="@dimen/filmapp_200_dp"
                android:adjustViewBounds="true"
                android:scaleType="fitXY"
                app:loadImageFromPath="@{movie.posterPath}"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/filmapp_175_dp"
                android:background="@drawable/background_white_with_top_10dp_radius"
                app:layout_constraintTop_toTopOf="parent">

                <TextView
                    android:id="@+id/movie_list_item_title"
                    style="@style/title_20_sp_and_bold"
                    android:layout_width="@dimen/filmapp_0_dp"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="@dimen/filmapp_30_dp"
                    android:layout_marginTop="@dimen/filmapp_12_dp"
                    android:layout_marginEnd="@dimen/filmapp_30_dp"
                    android:ellipsize="end"
                    android:maxLines="2"
                    android:text="@{movie.originalTitle}"
                    app:layout_constraintBottom_toTopOf="@id/movie_list_item_release_date_title"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent"
                    tools:text="Movie Title" />

                <TextView
                    android:id="@+id/movie_list_item_release_date_title"
                    style="@style/description_14_sp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/filmapp_8_dp"
                    android:text="@string/home_release_date_title"
                    app:layout_constraintBottom_toTopOf="@id/movie_list_item_vote_average_title"
                    app:layout_constraintStart_toStartOf="@id/movie_list_item_title"
                    app:layout_constraintTop_toBottomOf="@id/movie_list_item_title" />

                <TextView
                    android:id="@+id/movie_list_item_release_date"
                    style="@style/description_14_sp_italic"
                    android:layout_width="@dimen/filmapp_0_dp"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="@dimen/filmapp_8_dp"
                    android:text="@{movie.releaseDate}"
                    app:layout_constraintBottom_toBottomOf="@id/movie_list_item_release_date_title"
                    app:layout_constraintEnd_toEndOf="@id/movie_list_item_title"
                    app:layout_constraintStart_toEndOf="@id/movie_list_item_release_date_title"
                    app:layout_constraintTop_toTopOf="@id/movie_list_item_release_date_title" />

                <TextView
                    android:id="@+id/movie_list_item_vote_average_title"
                    style="@style/description_14_sp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/filmapp_5_dp"
                    android:layout_marginBottom="@dimen/filmapp_5_dp"
                    android:text="@string/home_vote_average_title"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintStart_toStartOf="@id/movie_list_item_release_date_title"
                    app:layout_constraintTop_toBottomOf="@id/movie_list_item_release_date_title" />

                <TextView
                    android:id="@+id/movie_list_item_vote_average"
                    style="@style/description_14_sp_italic"
                    android:layout_width="@dimen/filmapp_0_dp"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="@dimen/filmapp_8_dp"
                    android:text="@{String.valueOf(movie.voteAverage)}"
                    app:layout_constraintBottom_toBottomOf="@id/movie_list_item_vote_average_title"
                    app:layout_constraintEnd_toEndOf="@id/movie_list_item_release_date"
                    app:layout_constraintStart_toEndOf="@id/movie_list_item_vote_average_title"
                    app:layout_constraintTop_toTopOf="@id/movie_list_item_vote_average_title" />

            </androidx.constraintlayout.widget.ConstraintLayout>

        </androidx.constraintlayout.widget.ConstraintLayout>
    </androidx.cardview.widget.CardView>
</layout>
